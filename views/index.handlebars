<div class="container">
    <h1>Eat the Burger</h1>
    <div class="row burger-section">
        <div class="col-lg-6">
            <h2>Burgers</h2>
            <ul class="burger-list">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit">Devour Burger</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">
            <h2>Devoured Burgers</h2>
            <ul class="burger-list">
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 burger-add">
            <h2>Add a new burger</h2>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <input type="text" id="name" name="name">
                    <input type="hidden" name="devoured" value="false">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>