<h1>Eat the Burger</h1>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour Burger</button>
        </form>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a new burger</h2>
<form class="create-update-form" action="/" method="POST">
    <div class="form-group">
        <input type="text" id="name" name="name">
        <input type="hidden" name="devoured" value="false">
    </div>
    <button type="submit">Add Burger</button>
</form>